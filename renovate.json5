{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>mikutas/my-renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/k3d-default\\.ya?ml/"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>[^:]+):(?<currentValue>v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-(?<prerelease>[a-z]+\\d+))?(?<compatibility>\\-k3s)(?<build>\\d+))"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker.io/rancher/k3s"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "odigos",
        "postgresql"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
