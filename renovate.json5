{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>mikutas/my-renovate-config',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/k3d-default\\.ya?ml/',
      ],
      matchStrings: [
        'image:\\s*docker\\.io/rancher/k3s:(?<currentValue>v\\d+\\.\\d+\\.\\d+-k3s\\d+)',
      ],
      datasourceTemplate: 'docker',
      depNameTemplate: 'docker.io/rancher/k3s',
    },
  ],
  packageRules: [
    {
      matchPackageNames: [
        'odigos',
        'postgresql',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      automerge: true,
    },
  ],
}
